<LandingPage>:
    md_bg_color:217/255,3/255,3/255,.65
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"TAS Program"
                    font_style:"H4"
                    halign: "center"
                    bold: True
            MDIconButton:
                icon: "Img/setting.png"
        ScrollView:
            scroll_timeout : 100
            MDGridLayout:
                size_hint_y: .75
                cols: 2
                padding: [dp(15), dp(15), dp(15), dp(15)]
                spacing: dp(15)
                ElementCard:
                    image: "Img/Intro.png"
                    text: "Introduction to Programming"
                    subtext: "Introduction to Programming"
                    items_count: " "
                ElementCard:
                    image: "Img/python.png"
                    text: "Python Core"
                    subtext: "Python core or very basic lessons. It will help you to gain the basic knowledge of python."
                    items_count: ""
                    action: "PythonCore"



