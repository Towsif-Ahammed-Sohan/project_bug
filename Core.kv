<ElementCard@MDCard>:
    md_bg_color:217/255,3/255,3/255,0.23
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    image:''
    text:""
    items_count:""
    subtext:''
    ripple_behavior: True
    action: ""
    on_release:
        current_screen=root.action
    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
            bold: True
            bold: True
        MDLabel:
            halign:"center"
            font_style:"Subtitle1"
            text:root.subtext
            italic: True
        MDLabel:
            halign:"center"
            text:root.items_count
            font_style:"Caption"
